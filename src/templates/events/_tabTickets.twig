{% import "_includes/forms" as forms %}

<div class="flexContainer">
    {{ forms.lightswitchField({
        label: 'translate.events.fields.tickets.needsRegistration' | t('eventsky'),
        id: 'needsRegistration',
        name: 'needsRegistration',
        on: element.needsRegistration,
    }) }}
    {{ forms.textField({
        label: 'translate.events.fields.tickets.totalTickets' | t('eventsky'),
        id: 'totalTickets',
        name: 'totalTickets',
        value: event.totalTickets,
        placeholder: 'totalTickets' | t('eventsky'),
    }) }}
</div>

<div class="flexContainer">
    {{ forms.lightswitchField({
        label: 'translate.events.fields.tickets.hasWaitingList' | t('eventsky'),
        id: 'hasWaitingList',
        name: 'hasWaitingList',
        on: element.hasWaitingList,
    }) }}
    {{ forms.textField({
        label: 'translate.events.fields.tickets.waitingListSize' | t('eventsky'),
        id: 'waitingListSize',
        name: 'waitingListSize',
        value: event.waitingListSize,
        placeholder: 'waitingListSize' | t('eventsky'),
    }) }}
</div>

{% include "_includes/field" with {
    field: eventTicketTypeMappingField,
    required: true,
    element: element,
} only %}
